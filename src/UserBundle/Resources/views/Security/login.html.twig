{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 col-lg-offset-1">
            <h1>{{ 'security.login.login'|trans }} <small>{{ 'security.login.if_user'|trans }}</small></h1>
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'security.login.username'|trans }}"/>
                </div>
                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans }}"/>
                </div>
                <div class="form-group">
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary pull-right"/>
                </div>
                <ul class="list-unstyled list-inline">
                    <li>
                        <div class="checkbox">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>
                    </li>
                    <li><a href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.olvidaste_password'|trans }}</a></li>
                </ul>
                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <i class="fa fa-warning"> </i> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
            </form>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 col-lg-offset-1">
            {% include "UserBundle:Registration:register_content.html.twig" %}
        </div>
    </div>


{% endblock fos_user_content %}

{% block javascripts %}

    <script language="javascript">
        /* fade in de los alert de bootstrap */
        function showAlert() {
            $(".alert").addClass("in");
        }

        $(document).ready(function(){
            showAlert();
        });
    </script>
{% endblock %}