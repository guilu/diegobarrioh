{% trans_default_domain 'FOSUserBundle' %}

<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12">
    <h1>{{ 'security.restablece'|trans }}</h1>
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
        <div class="form-group">
            <label for="username" class="sr-only">{{ 'resetting.request.username'|trans }}</label>
            <input type="text" id="username" name="username" required="required" class="form-control" placeholder="{{ 'resetting.request.username'|trans }} o {{ 'registration.email_text'|trans }}"/>
        </div>
        <div class="form-group">
            <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-primary"/>
            <a href="{{ path('homepage') }}" class="btn btn-default">{{ 'registration.volver_a_inicio'|trans }}</a>
        </div>
        {% if invalid_username is defined %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
            </div>
        {% endif %}

    </form>
</div>
